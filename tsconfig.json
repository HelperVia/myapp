{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@app/*": ["app/*"],
      "@shared/*": ["shared/*"],
      "@pages/*": ["app/(pages)/*"],
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@lib/*": ["lib/*"],
      "@public/*": ["public/*"],
      "@context/*": ["context/*"],
      "@actions/*": ["actions/*"],
      "@constants/*": ["constants/*"],
      "@store/*": ["store/*"],
      "@schemas/*": ["schemas/*"],
      "@domain/*": ["domain/*"],
      "@services/*": ["services/*"]
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "**/*.ts",
    "**/*d.ts",
    "**/*.tsx",
    "src/app/api/auth/[...nextauth].js"
  ],
  "exclude": ["node_modules"]
}
